<div class="container">
  <div class="row">
    <div class="col s4"></div>
      <div class="center-align col s4 ">
        <h4>LOGIN</h4>
        <div class="divider"></div>
        <form action="/login" method="POST">
          <div class="input-field">
            <input type="text" name="username" class="validate center" autocomplete="off">
            <label for="username" class="active">username</label>
          </div>
          <div class="input-field">
            <input type="password" name="password" class="validate center">
            <label for="password" class="active">password</label>
          </div>
          <button type="submit" class="btn btn-large blue lighten-2 hoverable">sign in</button>
        </form>
      </div>
    <div class="col s4"></div>
  </div>
</div>
  {{>footer}}
